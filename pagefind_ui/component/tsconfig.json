{
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./npm_dist",
    "./_dev_files"
  ],
  "compilerOptions": {
    // File Layout
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./npm_dist",
    // Environment Settings
    "moduleResolution": "bundler",
    "module": "es2020",
    "target": "es2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    // Other
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
